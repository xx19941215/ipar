<div class="article">

    <div class="entity" data-id="{{dst_eid}}" data-type={{dst_type_id}}>
        <div class="entity-title">
            <a target="_blank" href="{{url}}">{{title}}</a>
        </div>

        <div class="entity-abbr">{{abbr}}</div>
        <a target="_blank" href="{{url}}">
            {{html_article_imgs}}
        </a>
        <div class="entity-content">{{content}}</div>

        <div class="user-avt-small-picture">
            <a href="{{user_url}}">
                {{user_avt}}
            </a>
        </div>
        <span>{{nick}}</span>
        <span>{{html_last_update}}</span>
        <div class="article-info">
            <a href="{{user_url}}">
                <span class="item">{{user_nick}}</span>
            </a>
            <span class="item">{{created}}</span>
        </div>
    </div>
</div>
