        <p class="errors">
            <?php foreach ($this->errors as $err_key => $err_value) { ?>
                <span class="label alert">
                <?php echo $err_key; ?>,<?php echo $err_value; ?>
            </span>
            <?php } ?>
        </p>
    <?php } ?>

    <?php if ($this->msg) { ?>
        <span><?php echo $this->msg; ?></span>
    <?php } ?>
    <br>
    <div>
        <input type="submit" class="button small" value="<?php echo trans('verify-mailbox'); ?>">
        <a class="small"
           href="<?php echo route_url('ipar-ui-i-account-info', ['zcode' => $this->user->zcode]); ?>"><?php echo trans('back'); ?></a>
