<form action="<?php echo $this->action; ?>" method="post" enctype="multipart/form-data" class="user-setting-form">
    <?php echo csrf_field(); ?>
    <ul class="menu vertical">
        <?php if ($this->user->email) { ?>
            <li>
                <div class="title"><?php echo trans('old-email'); ?></div>
                <?php echo $this->insert('module/form/user_setting/input-field', [
                    'type' => 'email',
                    'name' => '',
                    'placeholder' => '',
                    'value' => $this->user->email,
                    'maxlength' => '',
                    'disabled' => 'true',
                    'data_type' => '',
                    'has_error' => isset($errors['email'])
                ]); ?>
            </li>
        <?php } ?>
        <li>
            <div class="title"><?php echo trans('new-email'); ?></div>
            <?php echo $this->insert('module/form/user_setting/input-field', [
                'type' => 'email',
                'name' => 'new-email',
                'placeholder' => trans('new-email'),
                'value' => '',
                'maxlength' => '',
                'disabled' => '',
                'data_type' => '',
                'has_error' => isset($errors['email'])
            ]); ?>
        </li>
    </ul>

