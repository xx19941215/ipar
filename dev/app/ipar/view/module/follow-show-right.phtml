            <span class="following"><strong>+</strong> <?php echo trans("following-" . $this->entity_type_key); ?></span>
        </button>
    </span>

    <div class="info">
        <span>
            <span class="followed-count"><?php echo $this->followed_count ? $this->followed_count : 0; ?></span>
            <?php echo trans("followed-" . $this->entity_type_key); ?>
        </span>
        <div class="user-info">
            <?php if ($entity_follow_dtos = $this->followed_set->getItems()) { ?>
                <?php foreach ($entity_follow_dtos as $dto) { ?>
                    <?php $followed_user = $dto->getFollowedUser(); ?>
                    <span><?php echo $this->insert('module/user-avt', ['user' => $followed_user]); ?></span>
                <?php } ?>

            <?php } ?>
        </div>
    </div>
</div>

