<div class="rsidebar">
    <span id="follow-status" class="<?php
    if ($this->is_following && current_uid()) {
        echo "followed";
    } else {
        echo "unfollow";
    } ?>" data-eid="<?php echo $this->eid; ?>">
        <button class="button entities">
            <span class="followed"><?php echo trans("followed-" . $this->entity_type_key); ?></span>
