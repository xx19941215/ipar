<a id='rqt-solution-a' class="button" href="<?php echo route_url('admin-rqt-solution',['eid'=>$this->eid]); ?>"><?php echo trans('solution'); ?></a>
<?php if($this->type != 'detail') {?>
  <div id = 'rqt-solution-div'>
      <a id='solution-all-a' class="button small" href="<?php echo route_url('admin-rqt-solution',['eid'=>$this->eid]); ?>"><?php echo trans('all'); ?></a>
      <a id='solution-idea-a' class="button small" href="<?php echo route_url('admin-rqt-idea',['eid'=>$this->eid]); ?>"><?php echo trans('idea'); ?></a>
      <a id='solution-product-a' class="button small" href="<?php echo route_url('admin-rqt-product',['eid'=>$this->eid]); ?>"><?php echo trans('product'); ?></a>
