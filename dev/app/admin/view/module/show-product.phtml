<a id='product-property-a' class="button" href="<?php echo route_url('admin-product-property',['eid'=>$this->eid]); ?>"><?php echo trans('property'); ?></a>
<?php if($this->type != 'detail') {?>
  <div id = 'product-property-div'>
      <a id='property-all-a' class="button small" href="<?php echo route_url('admin-product-property',['eid'=>$this->eid]); ?>"><?php echo trans('all'); ?></a>
      <a id='property-feature-a' class="button small" href="<?php echo route_url('admin-product-feature',['eid'=>$this->eid]); ?>"><?php echo trans('feature'); ?></a>
      <a id='property-scenario-a' class="button small" href="<?php echo route_url('admin-product-scenario',['eid'=>$this->eid]); ?>"><?php echo trans('scenario'); ?></a>
